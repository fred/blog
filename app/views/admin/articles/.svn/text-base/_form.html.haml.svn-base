%p
  = f.label :title
  %br
  = f.text_field :title

%p
  = f.label :excerpt
  %br
  = f.text_area :excerpt

%p
  = f.label :body
  %br
  = f.text_area :body

%p
  = f.label :formatting_type
  %br
  = f.select(:formatting_type, Article::FORMATTING_TYPES.collect {|p| p }, { :include_blank => false })
%p
  = f.label :published
  %br
  = f.check_box :published

%p 
  = f.label :published_date
  %br
  = f.date_select :published_date

%p
  = f.label :permalink
  %br
  = f.text_field :permalink

%p
  = f.label :tags
  %br
  = text_field_tag :tag_list, @tag_list