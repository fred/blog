body {
	background-color: #E8EFFB;
}

p {
	margin: 6px 0px;
}

#site {
  width: 1000px;
  margin: 2px auto;
	background-color: #fff;
	border: 1px solid #ddd;
	padding: 10px;
}

#header {
	margin: 0;
	padding: 0;
}

#main {
	width: 800px;
	float: left;
}
	.flash_notice {
		background-color: pink;
		font-size: 1.4em;
		font-style: italic;
		padding: 0 4px;
	}
	.article {
		border: 1px solid #ddd;
	}

#sidebar {
	width:180px;
	float: right;
	margin: 0;
}

#sidebar .sidebar_block {
	width: 98%;
	float: right;
	margin: 0 0 10px 0;
}

#footer {
	width: 1000px;
	padding: 10px 0 0 0;
	border: 1px solid #ddd;
	text-align: center;
}

